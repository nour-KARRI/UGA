#use -qv classes/classes.cl1 scenarios/s1/s1.sc1
echo "#######  scenario 1  ########"
#betterCompile classes/classes.cl1 scenarios/s1/s1.sc1
use -qv classes/classes.cl1 scenarios/s1/s1.sc1
echo
echo "#######  scenario 2  ########"
#betterCompile classes/classes.cl1 scenarios/s2/s2.sc2
use -qv classes/classes.cl1 scenarios/s2/s2.sc2
echo
